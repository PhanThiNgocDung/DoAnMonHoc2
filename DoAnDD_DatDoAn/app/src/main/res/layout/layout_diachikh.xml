<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="10dp"
    android:paddingBottom="15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp">
        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_baseline_add_location_alt_24">

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/txt_tenDiaChiDC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Tên địa chỉ"
                android:textStyle="bold"
                android:textColor="@color/black">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/txt_soCayCuaMinhDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.05km"
                    android:textSize="15dp"></TextView>
                <TextView
                    android:paddingLeft="20dp"
                    android:id="@+id/txt_diachiKHCTDC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Bùi Xuân Phái, Tây Thạnh, Tân Phú, HCM"
                    android:textSize="15dp"></TextView>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</LinearLayout>