<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="5dp"
    >
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_TinhTrangDHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Đã giao "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_baseline_check_circle_24"/>
        <TextView
            android:id="@+id/txt_ThơiGianDHC"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="02, Jun"
         />

    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_TenQuanDHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 Râu "
            android:textStyle="bold"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:drawableRight="@drawable/ic_baseline_remove_24"
            />

        <TextView
            android:id="@+id/txt_DiaChiQADHC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_baseline_navigate_next_24"
            android:text=" Tân Kỳ Tân Quý"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="10dp">
        <TextView
            android:id="@+id/txt_TongTienDHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="59.000đ"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txt_HinhThucTTDHC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Ví MoMo)"
            android:textColor="@color/black" />
        <TextView
            android:id="@+id/txt_TongMonDHC"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 Món"
            android:textColor="@color/black" />
    </LinearLayout>
    <Button
        android:id="@+id/bn_DatLai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:backgroundTint="@color/white"
        android:text="Đặt lại"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/teal_200">

    </Button>



</LinearLayout>