<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/bn_quaylai5"
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="30dp"
            android:drawableLeft="@drawable/back">

        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/img_hinhCTMon"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:background="@drawable/hinnen">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_tenCTMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_weight="1"

            android:text="Cơm gà xối mỡ">
        </TextView>
        <TextView
            android:id="@+id/txt_GiaCTMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="25.000">
        </TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/vien">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Lưu ý đặt biệt">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="không bắt buộc">
        </TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/vien">

    </TextView>

    <EditText
        android:id="@+id/txt_LuuYCTMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20dp"
        android:hint="ví dụ : không hành">

    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/vien">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bn_truCTMon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#ffffff"
            android:background="@drawable/ic_baseline_horizontal_rule_24">
        </Button>

        <TextView
            android:id="@+id/txt_soLuongCTMon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text="1"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:gravity="center">

        </TextView>

        <Button
            android:id="@+id/bn_CongCTMon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:backgroundTint="#ffffff"
            android:background="@drawable/ic_baseline_add_24">
        </Button>


    </LinearLayout>

    <Button
        android:id="@+id/bn_ThemVaoGioHangCTMon"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="THÊM MÓN VÀO GIỎ HÀNG"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="@drawable/hinhanhbotron"
        android:padding="4dp"/>

</LinearLayout>