@{
    Layout = null;
}
@model DoAn_CNWEB_BanLapTop.Models.SanPham
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TaoSP</title>
     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js"></script>
    <!--iCON-->
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script src="https://kit.fontawesome.com/yourcode.js"></script>
</head>
<body>
     @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
    
        <div class="form-control mx-auto" style="width:800px;">
            <h2 class="mt-3" style="color:blue; font-weight:bold; text-align:center">THÊM SẢN PHẨM</h2>
    
            <div class="form-group">
               Tên sản phẩm:
                @Html.TextBoxFor(model => model.TenSanPham, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.TenSanPham, "", new { @class="text-danger" })
            </div>

            <div class="form-group">
                Giá :
                @Html.TextBoxFor(model => model.Gia, new { @class="form-control"}) VNĐ
                @Html.ValidationMessageFor(model => model.Gia, "", new { @class="text-danger" })
            </div>          
            
            <div class="form-group">
                Ảnh Bìa:
                @Html.TextBoxFor(model => model.AnhBia, new { @class="form-control", type="file"})
                @Html.ValidationMessageFor(model => model.AnhBia, "", new { @class="text-danger" })
            </div>

            <div class="form-group">
               Số lượng tồn:
                @Html.TextBoxFor(model => model.SoLuongTon, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.SoLuongTon, "", new { @class="text-danger" })
            </div>  

            <div class="form-group">
                Hãng sản phẩm:       
                @Html.DropDownListFor(model => model.MaNSX,null,"Chọn Hãng sản phẩm",new {@class="form-control"
           })
                @Html.ValidationMessageFor(model => model.MaNSX, "", new { @class="text-danger" })
            </div>

            <div class="form-group">
                Loại sản phẩm:        
                @Html.DropDownListFor(model => model.MaLoai,null,"Chọn Loại Sản Phẩm",new {@class="form-control"
           })
                @Html.ValidationMessageFor(model => model.MaLoai, "", new { @class="text-danger" })
            </div>
              <div class="form-group">
               CPU:
                @Html.TextBoxFor(model => model.MoTa.CPU, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.CPU, "", new { @class="text-danger" })
            </div> 
             <div class="form-group">
               RAM:
                @Html.TextBoxFor(model => model.MoTa.RAM, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.RAM, "", new { @class="text-danger" })
            </div> 
             <div class="form-group">
               Màn hình:
                @Html.TextBoxFor(model => model.MoTa.ManHinh, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.ManHinh, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Đồ họa:
                @Html.TextBoxFor(model => model.MoTa.DoHoa, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.DoHoa, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Ổ cứng:
                @Html.TextBoxFor(model => model.MoTa.OCung, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.OCung, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Hệ điều hành:
                @Html.TextBoxFor(model => model.MoTa.HeDieuHanh, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.HeDieuHanh, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Trọng lượng:
                @Html.TextBoxFor(model => model.MoTa.TrongLuong, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.TrongLuong, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Kích thước:
                @Html.TextBoxFor(model => model.MoTa.KichThuoc, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.KichThuoc, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Xuất bản:
                @Html.TextBoxFor(model => model.MoTa.XuatXu, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.XuatXu, "", new { @class="text-danger" })
            </div> 
            <div class="form-group">
               Năm ra mắt:
                @Html.TextBoxFor(model => model.MoTa.NamRaMat, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MoTa.NamRaMat, "", new { @class="text-danger" })
            </div> 
            <br />
            <p>
                <input class="btn btn-primary" type="submit" value="Create" />
            </p>
            <div>
             @Html.ActionLink("Back to List", "ShowEmplParameter")
            </div>
        </div>
    }
</body>
</html>

