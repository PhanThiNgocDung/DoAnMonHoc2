@{
    Layout = null;
    Layout = "~/Views/Share/QLSanPham.cshtml";
}

<!DOCTYPE html>
@model IEnumerable<DoAn_CNWEB_BanLapTop.Models.TinTuc>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>TinTucTheoMa</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js"></script>
</head>
<body>
    <div>
         <div class="container">
    <h2 class="mt-3" style="text-align:center;color:blue;font-weight:bold;">
        TẤT CẢ TIN TỨC
    </h2>
    <p>
        @Html.ActionLink("Create New", "TaoTinTuc")
    </p>
    <table class="table bordered">
        <tr>
            <th>Tiêu đề:
            </th>
            <th>Nội dung:
            </th>
            <th>Ảnh:
            </th>
            <th>Ngày tạo
            </th>
            <th>Lượt CMT:
            </th>
            <th>Mã loại tin:
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.TieuDe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoiDung)
                </td>
                <td>
                    <img src="~/MauTin/@Html.DisplayFor(modelItem => item.AnhBia)" style="width:50px"/>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayTao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cmt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaLoaiTin)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.tbl_Deparment.Name)
                </td>*@
            <td>
                @Html.ActionLink("Delete", "XoaTinTuc", new { id = item.MaTin })
            </td>
        </tr>
    }
    
    </table>
    </div>				
    </div>
</body>
</html>
