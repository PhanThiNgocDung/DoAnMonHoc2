@model DoAn_CNWEB_BanLapTop.Models.TinTuc
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>ChinhSuaTinTuc</title>
       <meta name="viewport" content="width=device-width" />

     <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.rawgit.com/PascaleBeier/bootstrap-validate/v2.2.0/dist/bootstrap-validate.js"></script>
    <!--iCON-->
    <link rel="stylesheet"href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"/>
    <script src="https://kit.fontawesome.com/yourcode.js"></script>
</head>
<body>
     @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)
         {
    <br />
        <div  class="mx-auto" style="width:500px;margin-left:400px;border:1px solid black">
            <div style="width:450px; padding-left:20px">
          <h2 style="color:blue; text-align:center">CHỈNH SỬA TIN TUC</h2>
    
            @Html.HiddenFor(model => model.MaTin)   
            <div class="editor-label">
            Tiêu đề:
            </div>
            <div class="form-group ">
                @Html.TextBoxFor(model => model.TieuDe, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.TieuDe)
            </div>
    
            <div class="editor-label">
              Nội dung:
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.NoiDung, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.NoiDung)
            </div>
    
            <div class="editor-label">
               Ảnh bìa:
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.AnhBia, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.AnhBia)
            </div>

            <div class="editor-label">
               Ngày tạo:
            </div>
            <div class="form-group">
                    <input id="ngayTao" class="form-control" type="datetime"  name="ngayTao" value="@Model.NgayTao" />
@*                @Html.ValidationMessageFor(model => model.SoLuongTon)*@
            </div>
    
            <div class="editor-label">
                lượt cmt:
            </div>
            <div class="form-group">
                @Html.TextBoxFor(model => model.MaTin, new { @class="form-control"})
                @Html.ValidationMessageFor(model => model.MaTin)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </div>
              <div>
        @Html.ActionLink("Back to List", "Loai")
    </div>
            </div>
     }
        
    }
    
  
</body>
</html>
