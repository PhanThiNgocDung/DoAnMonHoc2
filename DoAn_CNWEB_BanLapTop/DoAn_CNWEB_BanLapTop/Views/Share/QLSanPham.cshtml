@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>QLSanPham</title>
  
    <link rel="stylesheet" href="~/Content/layout-home.css" type="text/css" />
      <style>
        .h{width:100%;height:100%;border-bottom:3px #000 solid;}
        .h a{text-decoration:none;color:#fff;padding:0 16px;}
    </style>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <!-- Header -->
        <header>
            <div class="banner">
                <img src="~/Content/banner.jpg" alt="banner" />
            </div>
            <div class="navigator">
                <div class="h" style="text-align:center;">
                    @Html.ActionLink("LOẠI SẢN PHẨM", "Loai", "AdminLoai")
                    @Html.ActionLink("TIN TỨC", "TinTuc", "AdminTinTuc")
                    @Html.ActionLink("KHÁCH HÀNG", "KhachHang", "AdminKhachHang")
                  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        @if (Session["TaiKhoan"] != null)
                             {
                                   <span style="color:white">&nbsp;  @Session["tenTaiKhoan"].ToString() &nbsp;&nbsp;&nbsp;</span> 
                   <a href= "@Url.Action("DangXuat", "NguoiDung")" >ĐĂNG XUẤT</a>
                             }
               else{
                             <span style="color:white">&nbsp; Khách mới</span>
                        }
                </div>
               
            </div>
           
            </header>
		<div class="line-20"></div>
            <!-- Content -->
            <content>
                @RenderBody()				
		    </content>

            <!-- Footer -->
            <footer>
                <p>
                    &copy; 2016 Handsomeroot's Blog. Design by Handsomeroot
                </p>
            </footer>
    </div>
    <script src="~/Content/js/Food.js"></script>
</body>
</html>
