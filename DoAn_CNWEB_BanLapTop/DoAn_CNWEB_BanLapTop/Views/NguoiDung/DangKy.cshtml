@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Share/LayOutSP.cshtml";
}
@using (Html.BeginForm())
    {
      @Html.ValidationSummary(true)
    {
    <div class="container" style="border: 1px solid #817b7b">
        <h5 style="color:red; text-align:center">@ViewBag.TB</h5>
                <br />
                    <!-- Modal Header -->
                    <div class="modal-header" style="background:darkorange; color: white">
                      <h4 class="modal-title text-center">ĐĂNG NHẬP TÀI KHOẢN</h4>
                        
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
       
                    <!-- Modal body -->
                    <div class="col-12">
                           

                            <div class="form-group">
                            <label for="usename">Họ và tên<span style="color:red"> *</span></label>
                            <input type="text" name="HoTen" id=""  class="form-control is-invalid" placeholder="Họ và tên..."/>
                            </div>
                             <div class="form-group">
                            <label for="usename">Ngày sinh<span style="color:red"> *</span></label>
                             <input  style="width:400px" id="Reset1" type="Date" value="reset" name="ngaySinh" />
                             </div>
                             <div class="form-group">
                            <label for="usename">Giới tính<span style="color:red"> *</span></label>
                              <div class="form-group" id="Radio">
                                     <input name="GioiTinh" type="radio"   style="margin-left: 200px"/> Nam
                                     <input name="GioiTinh" type="radio"  style="margin-left: 150px"/> Nữ
                                     <input name="GioiTinh" type="radio"  style="margin-left: 150px" /> Khác
                                </div>
                                 </div>
                             <div class="form-group">
                            <label for="usename">Điện thoại<span style="color:red"> *</span></label>
                            <input type="text" name="DienThoai" id=""  class="form-control is-invalid" placeholder="099 134 78XX"/>
                                 </div>
                             <div class="form-group">
                            <label for="usename">Tên tài khoản<span style="color:red"> *</span></label>
                            <input type="text" name="TenDN" id=""  class="form-control is-invalid" placeholder="Nhập tên tài khoản"/>
                                 </div>
                            <div class="form-group">
                            <label for="usename">Mật khẩu<span style="color:red"> *</span></label>
                            <input type="text" name="MatKhau" id=""  class="form-control is-invalid" placeholder="Nhập mật khẩu"/>
                                </div>
                         <div class="form-group">
                            <label for="usename">Nhập lại mật khẩu<span style="color:red"> *</span></label>
                            <input type="text" name="ReMatKhau" id=""  class="form-control is-invalid" placeholder="Nhập mật khẩu"/>
                                </div>
                             <div class="form-group">
                            <label for="usename">Email<span style="color:red"> *</span></label>
                            <input type="text" name="Email" id=""  class="form-control is-invalid" placeholder="Nhập Email ..."/>
                               </div> 
                            <div class="form-group">
                            <label for="usename">Địa chỉ<span style="color:red"> *</span></label>
                            <input type="text" name="DiaChi" id=""  class="form-control is-invalid" placeholder="Nhà bạn ở đâu đó..."/>
                              </div>
                    <!-- Modal footer -->
                    <div >
                      <center><input id="Button1" class="mx-auto btn btn-primary" type="submit" value="Đăng ký" /> <input id="Checkbox1" type="checkbox" /> Ghi nhớ mật khẩu?</center>
                    <br />
                    </div>
              </div>
        </div>
  }
  }
